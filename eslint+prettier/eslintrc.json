{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            "table"
        ],
        "quotes": [
            "error",
            "single" 
        ],
        "semi": [
            "error",
            "never" 
        ],
        "no-unused-vars": 2, 
        "no-duplicate-case": "error",
        "object-curly-spacing": [
            "error",
            "always",
            {
                "arraysInObjects": false,
                "objectsInObjects": false
            }
        ],
        "new-cap": [
            "error",
            "capIsNewExceptions": [// Angular 组建
                "Component",
                "Input",
                "NgModule"
            ]
        ]
    }
}
