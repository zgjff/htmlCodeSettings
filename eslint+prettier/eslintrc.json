{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates"
      ],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ],
        "indent": [
          "error",
          "tab"
        ],
        "quotes": [
          "error",
          "single"
        ],
        "semi": [
          "error",
          "never"
        ],
        "object-curly-spacing": [
          "error",
          "always",
          {
            "arraysInObjects": false,
            "objectsInObjects": false
          }
        ],
        "comma-dangle": [
          "error",
          "never"
        ],
        "no-tabs": [
          "error",
          {
            "allowIndentationTabs": true
          }
        ],
        "no-unused-vars": 2,
        "no-duplicate-case": "error",
        "lines-between-class-members": [
          "error",
          "always"
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {
        "indent": [
          "error",
          "tab"
        ],
        "quotes": [
          "error",
          "single"
        ],
        "semi": [
          "error",
          "never"
        ],
        "object-curly-spacing": [
          "error",
          "always",
          {
            "arraysInObjects": false,
            "objectsInObjects": false
          }
        ],
        "comma-dangle": [
          "error",
          "never"
        ],
        "no-tabs": [
          "error",
          {
            "allowIndentationTabs": true
          }
        ],
        "no-unused-vars": 2,
        "no-duplicate-case": "error",
        "lines-between-class-members": [
          "error",
          "always"
        ]
      }
    }
  ]
}
