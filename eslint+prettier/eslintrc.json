{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "object-curly-spacing": [
        "error",
        "always",
        {
          "arraysInObjects": false,
          "objectsInObjects": false
        }
      ],
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            // Angular 组件
            "Component",
            "Input",
            "NgModule"
          ]
        }
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-tabs": [
        "error",
        {
          "allowIndentationTabs": true
        }
      ],
      "no-unused-vars": 2,
      "no-duplicate-case": "error",
      "lines-between-class-members": [
        "error",
        "always"
      ]
    }
}
